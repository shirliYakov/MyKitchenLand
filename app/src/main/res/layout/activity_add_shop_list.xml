<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_shopping_list"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background1"
    tools:context="com.example.shirl1.mykitchenland.AddShopListActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="142dp"
        android:layout_height="15dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <ListView
        android:id="@+id/shopping_listView"
        android:layout_width="match_parent"
        android:layout_height="318dp"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ListView>

    <EditText
        android:layout_width="93dp"
        android:layout_height="53dp"
        android:inputType="numberSigned"
        android:hint="@string/amount"
        android:id="@+id/amount"
        android:allowUndo="false"
        android:gravity="center_vertical|center"
        android:layout_below="@+id/shopping_listView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/productname"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_alignTop="@+id/amount"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:onClick="btn_add_sl_On_Click"
        android:text="חזור לתפריט הראשי"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/add_button"
        android:layout_alignStart="@+id/add_button" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addtolist"
        android:layout_below="@+id/item_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>

