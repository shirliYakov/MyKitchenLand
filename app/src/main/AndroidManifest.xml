<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shirl1.mykitchenland">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconapp"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity
            android:name=".Registration"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainMenu" />
        <activity android:name=".WeeklyMenu" />
        <activity
            android:name=".Inventory"
            android:label="@string/title_activity_inventory" />
        <activity android:name=".splash_welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyRecipesActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".RecipesActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".ShopListActivity" />
        <activity
            android:name=".AddRecActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".AddShopListActivity" />
        <activity
            android:name=".SearchRecActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ShowRecipActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ShowManagerRecipActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>
    </application>

</manifest>