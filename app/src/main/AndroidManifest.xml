<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shirl1.mykitchenland">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Registration"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainMenu" />
        <activity
            android:name=".WeeklyMenu"
            android:windowSoftInputMode="adjustPan" />
        />
        <activity
            android:name=".Inventory"
            android:label="מלאי ביתי" />
        <activity android:name=".splash_welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyRecipesActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".RecipesActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ShopListActivity"
            android:label="רשימת קניות" />
        <activity
            android:name=".AddRecActivity"
            android:label="מתכון חדש"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AddShopListActivity"
            android:label="רשימת קניות חדשה" />
        <activity
            android:name=".SearchRecActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ShowRecipActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ShowManagerRecipActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".DisplayMenuActivity"
            android:label="תפריט שבועי"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".EditRecipeActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".allowdeleterecipActivity" />
        <activity android:name=".allowdeletemenuActivity" />
        <activity android:name=".fullscreenimageActivity" />
        <activity
            android:name=".ShowList"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".search_list"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".allow_delete_list"></activity>
    </application>

</manifest>